@import "~app-components/variables.styl"

.Lightbox
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  zIndex("lightbox")

  &.hidden
    visibility: hidden

  //----------------------------------------------------------------- Overlay
  .overlay
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: rgba($black, 0.85)
    zIndex("base")

  //----------------------------------------------------------------- Controls
  .left, .right
    position: absolute
    width: 60px
    height: 120px
    top: 50%
    transform: translateY(-50%)
    line-height: @height
    color: $white
    font-size: 42px
    cursor: pointer
    zIndex("jump")

    &.hidden
      display: none

  .left
    left: 20px
  .right
    right: 20px

  .close
    position: absolute
    top: 20px
    left: 20px
    width: 40px
    height: 40px
    line-height: @height
    text-align: center
    cursor: pointer
    color: $white
    font-size: 28px
    zIndex("jump")

  //----------------------------------------------------------------- Pictures
  .pictures
    position: relative
    width: 100%
    height: 100%
    zIndex("increment")

    .scroller
      width: 100%
      height: 100%
      overflow: hidden
      transition: transform 450ms ease-in-out

    .picture
      position: relative
      display: inline-block
      width: 100%
      height: 100%
      text-align: center

      &:before
        content: ""
        height: 100%
        display: inline-block

      &:before, img
        vertical-align: middle

      img
        max-width: 80%
        max-height: 100%

  //----------------------------------------------------------------- Dotted guide
  .guide
    position: absolute
    width: 100%
    height: 10px
    bottom: 30px
    text-align: center
    zIndex("jump")

    .indicator
      display: inline-block
      width: 8px
      height: @width
      margin: 5px
      transition: transform 450ms ease-in-out
      background: $white
      border-radius: 50%
      cursor: pointer

      $scale-factor = 1.8
      &.selected
        transform: scale($scale-factor, $scale-factor)
