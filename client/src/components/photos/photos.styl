.Photos
  max-width: 80%;
  margin: 0 auto;
  text-align: center;

  .Photo
    display: inline-block;
    margin: 10px;

    img
      height: 100px;
      width:100px;
      vertical-align: top;

      &:hover
        border: 1px solid green;

    .Photo-image-selected
      border: 1px solid green;

  .Modal-content
    height: 90vh;
    width: 85vw;

  .Photos-slideshowcontainer
    width: 100%;
    height: 100%;

    img
      max-height: 100%;
      max-width: 100%;

    .Slideshow-prev
      left: -60px

    .Slideshow-next
      right: -60px
