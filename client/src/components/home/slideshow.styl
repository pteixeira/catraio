lightgray = alpha(gray, 0.3);

// Mixin for prev and next
SlideshowDirection()
  &:hover
    background: alpha(lightgray, 0.5);

  align-items: center;
  background: lightgray;
  cursor: pointer;
  display: flex;
  height: 200px;
  padding: 0 5px;
  position: absolute;
  z-index: 999;


.Slideshow
  margin: 0 auto;
  position: relative;
  text-align: center;

  img
    opacity: 0;
    position: absolute;
    top: 0;
    left: 0;
    max-width: 100%;
    transition: opacity 0.3s linear;

    &.active
      opacity: 1;

  .Slideshow-images
    position: relative;
    height: 200px;

  .Slideshow-prev
    SlideshowDirection()

  .Slideshow-next
    SlideshowDirection()
    right: 0;
    top: 0;

  .arrow-prev, .arrow-next
    cursor: pointer;

  .Slideshow-ball
    &.active
      background: green;

    &:hover:not(.active)
      background: black;

    background: gray;
    border: 1px solid black;
    border-radius: 50%;
    cursor: pointer;
    display: inline-block;
    height: 10px;
    width: 10px;
    margin: 0 5px;
