lightgray = alpha(gray, 0.3);

// Mixin for prev and next
SlideshowDirection()
  &:hover
    background: alpha(lightgray, 0.5);

  align-items: center;
  background: lightgray;
  cursor: pointer;
  display: flex;
  height: 100%;
  padding: 0 5px;
  position: absolute;
  z-index: 5;


.Slideshow
  margin: 0 auto;
  position: relative;
  text-align: center;
  width: 100%;
  height: 100%;

  .Slideshow-images
    position: relative;
    height: 100%;

    img
      opacity: 0;
      position: absolute;
      top: 0;
      left: 0;
      transition: opacity 0.3s linear;

      &.active
        opacity: 1;

  .Slideshow-slidingimages
    display: inline-block;

    img
      margin: 0 5px;
      height: 100px;
      width: 100px;

      &.active
        border: 1px solid green;

  .Slideshow-slidingimages-notvisible
    display: none;

  .Slideshow-prev
    SlideshowDirection()

  .Slideshow-next
    SlideshowDirection()
    right: 0;
    top: 0;

  .arrow-prev, .arrow-next
    cursor: pointer;

  .Slideshow-indicators-notvisible
    display: none;

  .Slideshow-indicator
    &.active
      background: green;

    &:hover:not(.active)
      background: black;

    background: gray;
    border: 1px solid black;
    border-radius: 50%;
    cursor: pointer;
    display: inline-block;
    height: 10px;
    width: 10px;
    margin: 0 5px;
