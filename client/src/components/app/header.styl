@import "../variables.styl"

.Header
  width: 100%
  margin: 0 auto 30px
  padding: 40px 0 10px
  font-family: hagin
  background: $black;

  h1
    height: 100px
    margin-top: 0;
    background: url("../../assets/images/logo-big.png") no-repeat center center
    background-size: contain
    text-indent: -99999px
    text-align: center

  .Header-menu
    text-align: center
    list-style: none

  .Header-menu-item
    display: inline-block
    margin: 10px
    font-size: 32px

    .active
      border-bottom: 2px solid $yellow

