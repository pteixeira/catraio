*, *:after, *:before
  box-sizing: border-box

html, body
  width: 100vw
  height: 100vh
  padding: 0
  margin: 0

#app
  width: 100%
  height: 100%

  .App
    position: relative
    width: 100%
    min-height: 100%
    padding-bottom: 50px // must be equal to the height of the footer!

    .hide
      display: none;
