@import "../variables.styl"

*, *:after, *:before
  box-sizing: border-box

html, body
  height: 100%
  width: 100%
  padding: 0
  margin: 0
  background: $white;
  font-family: "ralewayregular";

#app
  width: $page-width;
  height: 100%
  margin: 0 auto
  background: $white
  color: $black

  .App
    width: 1280px
    padding: 0 20px
    margin: 0 auto
    position: relative
    min-height: 100%
    padding: 0 0 20px

a, a:link, a:active, a:visited
  color: $black
  text-decoration: none

a.no-hover:hover
  color: $black

.hide
  display: none;

.left-pad
  padding-left: 20px

.right-pad
  padding-right: 20px

//
// Menu link
.menu-link
  border: 1px solid $yellow
  padding: 10px
  margin-left: 20px
  margin-top: 20px
  font-size: 150%

  &.yellow
    color: $yellow

//
// Sections
.section
  display: flex
  align-items: center

  & > *
    flex-basis: 50%

  .section-bottles
    align-self: flex-start

    .section-header
      padding-left: 20px
      margin-bottom: 50px

// Floated elements container
.Clearfix
  margin: $vertical-spacing 0

  &:after
    content: ""
    display: table
    clear: both

//
// Gallery / Merchandising thumbnails
.ClickablePicture
  position: relative
  cursor: pointer

  &:after
    content: ""
    position: absolute
    width: 100%
    height: 100%
    border: 0 solid $yellow
    top: 0
    left: 0
    transition: border-width 200ms ease-in-out

  &:hover:after
    border-width: 5px
