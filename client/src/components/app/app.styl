@import "../variables.styl"

*, *:after, *:before
  box-sizing: border-box

html, body
  height: 100%
  width: 100%
  padding: 0
  margin: 0
  background: $white;
  font-family: "ralewayregular";

#app
  width: $page-width;
  height: 100%
  margin: 0 auto
  background: $white
  color: $black

  .App
    width: 1280px
    padding: 0 20px
    margin: 0 auto
    position: relative
    min-height: 100%
    padding-bottom: 20px

a, a:link, a:active, a:visited
  color: $black
  text-decoration: none

a.no-hover:hover
  color: $black

.hide
  display: none;

.Blockquote
  width: 75%
  margin: 0 auto

  .quote
    font-family: "Droid Serif", serif;
    font-size: 22px;
    font-style: italic;
    margin-bottom: 20px
    color: #444

    $margin = 2px
    &:before, &:after
      font-size: 30px
      font-weight: bold
      color: #555
    &:before
      content: "“"
      margin-right: $margin
      margin-left: -14px
    &:after
      content: "”"
      margin-left: $margin

  .author
    font-size: 18px
    color: #666
