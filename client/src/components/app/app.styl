@import "../variables.styl"

*, *:after, *:before
  box-sizing: border-box

html, body
  height: 100%
  width: 100%
  padding: 0
  margin: 0
  background: $white;
  font-family: "ralewayregular";

#app
  width: $page-width;
  height: 100%
  margin: 0 auto
  background: $white
  color: $black

  .App
    width: 1280px
    padding: 0 20px
    margin: 0 auto
    position: relative
    min-height: 100%
    padding: 70px 0 20px

a, a:link, a:active, a:visited
  color: $black
  text-decoration: none

a.no-hover:hover
  color: $black

.hide
  display: none;
