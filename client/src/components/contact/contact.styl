.ContactInfo
  display: flex;
  justify-content: center;

  .ContactInfo-left
    margin-right: 50px;

    h3
      margin: 15px 0 0;

    .ContactInfo-schedule
      table
        margin: 0 auto;
        width: 100%;

        td
          padding: 5px;

        .ContactInfo-weekday
          padding-left: 0;

  .Map
    height: 250px;
    margin: 5px auto;
    width: 250px;

  .ContactForm
    :first-child
      margin-top: 0;

    label, button
      display: block;
      margin-top: 10px;

    input, textarea
      display: block;
      width: 300px;

    textarea
      height: 100px;

    button
      float: right;
