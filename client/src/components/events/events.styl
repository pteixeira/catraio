.Events
  .hide
    display: none;

  h2
    text-align: center;

  .Events-event
    width: 90%;
    margin: 0 auto;
    padding: 15px 0;

    &:first-of-type
      padding-top: 0;

    &:last-of-type
      padding-bottom: 0;

    &:not(:first-of-type)
      border-top: 1px solid black;

    h3
      margin-top: 0;
      text-align: center;

    .Events-eventimage
      text-align: center;
      max-width: 100%;
