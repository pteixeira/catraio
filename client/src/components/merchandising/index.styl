@import "~app-components/variables.styl"

.Merchandising
  margin: $vertical-spacing auto

  h1
    margin: 0
    position: relative
    font-size: 26px
    font-weight: 300
    text-transform: uppercase

    span
      display: inline-block
      height: 100%
      background: $white
      padding-right: 10px

    &:after
      display: block
      position: absolute
      top: 11px
      left: 0
      right: 0
      content: ""
      height: 7px
      border-top: 2px solid $black
      border-bottom: 1px solid $black
      zIndex("negative")

  h2
    margin: 10px 0 30px
    font-size: 18px
    color: $yellow
    text-transform: uppercase
    font-weight: 400
    letter-spacing: 0.01em

  .items
    padding: 0
    margin: 0
    list-style: none
    display: flex
    justify-content: space-between
    align-items: center
    align-content: center

    .item
      background: $light-grey
      width: 280px
      height: @width * 0.9
      line-height: @height
      text-align: center
      color: $white
      font-size: 36px
      font-weight: 600
      text-transform: uppercase
