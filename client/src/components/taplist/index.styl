@import "~app-components/variables.styl"

.Taplist
  width: calc(50% - 10px)
  float: left
  border-collapse: collapse;

  tbody
    tr:nth-child(2n)
      th, td
        background: #f6f6f6

  th, td
    $padding = 10px
    padding: $padding 0
    border-bottom: 1px solid $black

    &.right
      text-align: right
    &.left
      text-align: left
    &.price
      padding: $padding 0 $padding 5px

    &:first-child
      padding-left: 5px

    &:last-child
      padding-right: 5px

  thead th
    border: none
    font-size: 16px

    &.price
      padding: 0
